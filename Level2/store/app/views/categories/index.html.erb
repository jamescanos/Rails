<%= render "welcome/menu" %>

<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Categories</h1>
        <p class="lead text-muted">Category Management.</p>
        <p>
            <%= link_to 'New Category', new_category_path, class: "btn btn-success my-2" %>
            <%= link_to 'Home', root_path, class: "btn btn-primary my-2" %>
        </p>
      </div>
    </div>
  </section>

  <section class="py-5 text-center container">

    <table class="table table-bordered">

        <tr style="text-align:center;">
            <th>ID</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>

        <tbody>

            <% @categories.each do |category| %>
                <tr style="text-align:center;">
                    <td><%= category.id %></td>
                    <td><%= category.name %></td>
                    <td><%= link_to "Edit", edit_category_path(category), class: "btn btn-sm btn-warning" %>
                        <%= link_to "Destroy", category_path(category), 
                        method: :delete,
                        data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
                    </td>                      
                </tr>
            <% end %>

        </tbody>

    </table>

  </section>
</main>
