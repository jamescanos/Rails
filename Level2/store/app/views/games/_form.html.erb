
<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        
        <h1 class="fw-light">New  Game</h1>
        
        <div style="margin-top: 2em;">

          <%= form_with model: @game, class:"form-inline" do |form| %>

            <div class="row">
          
              <div class="form-group row">
                                  
                <%= form.label :name, class:"col-sm-2 col-form-label" %>

                <div class="col-sm-10">
                  <%= form.text_field :name, class:"form-control" %>
                </div>

                <% @game.errors.full_messages_for(:name).each do |message| %>
                      <div style="margin: 1em;0;0;1em" class="alert alert-danger alert-dismissible fade show" role="alert" role="alert"><%= message %></div>
                <% end %>

              </div>

              <div class="form-group row">                                  
                <%= form.label :price, class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= form.number_field :price, class:"form-control"  %>
                </div>

                <% @game.errors.full_messages_for(:price).each do |message| %>
                  <div style="margin: 1em;0;0;1em" class="alert alert-danger alert-dismissible fade show" role="alert" role="alert"><%= message %></div>
                <% end %>

              </div>

              <div class="form-group row">                                  
                <%= form.label :description, class:"col-sm-2 col-form-label" %>

                <div class="col-sm-10">
                  <%= form.text_area :description, class:"form-control" %>
                </div>

                <% @game.errors.full_messages_for(:description).each do |message| %>
                  <div style="margin: 1em;0;0;1em" class="alert alert-danger alert-dismissible fade show" role="alert" role="alert"><%= message %></div>
                <% end %>

              </div>

              <div class="form-group row">                                  
                <%= form.label :platform, class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                   <%= form.select :id, Platform.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>
                </div>
              </div>

              <div style="margin-top: 1em;">
                  <%= form.submit "Submit", class: "btn btn-default btn-success" %>
                  <%= link_to 'Back', companies_path, class: "btn btn-primary" %>
              </div>

            </div>

          <%end%>
        </div>
      </div>
    </div>
  </section>
</main>