<%= render "welcome/menu" %>

<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Companies</h1>
        <p class="lead text-muted">Company Management.</p>
        <p>
            <%= link_to 'New Company', new_company_path, class: "btn btn-success my-2" %>
            <a href="#" class="btn btn-info my-2">Books</a>
            <a href="#" class="btn btn-warning my-2">Games</a>
            <%= link_to 'Home', root_path, class: "btn btn-primary my-2" %>
        </p>
      </div>
    </div>
  </section>

  <section class="py-5 text-center container">

    <table class="table table-bordered">

        <tr style="text-align:center;">
            <th>ID</th>
            <th>Company</th>
            <th>Actions</th>
        </tr>

        <tbody>

            <% @companies.each do |company| %>
                <tr style="text-align:center;">
                    <td><%= company.id %></td>
                    <td><%= company.name %></td>
                    <td><%= link_to "Edit", edit_company_path(company), class: "btn btn-sm btn-warning" %>
                        <%= link_to "Destroy", company_path(company), 
                        method: :delete,
                        data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
                    </td>                      
                </tr>
            <% end %>

        </tbody>

    </table>

  </section>
</main>
