<%= form_with model: @product do |form| %>
    <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %><br>
        <% @product.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <%end%>
    </div>

    <div>
        <%= form.label :price %><br>
        <%= form.text_field :price %><br>
        <% @product.errors.full_messages_for(:price).each do |message| %>
            <%= message %>
        <%end%>
    </div>
    <br>

    <div>
        <%= form.submit %>
    </div>

<% end %>    